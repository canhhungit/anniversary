{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prettier": "prettier . --write",
    "type-check": "tsc --noEmit",
    "generate": "yarn plop --plopfile ./.plop/plopfile.js"
  },
  "dependencies": {
    "@serwist/next": "^9.1.1",
    "next": "^16.0.7",
    "next-intl": "^4.5.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.5.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "plop": "^4.0.1",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "serwist": "^9.1.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
